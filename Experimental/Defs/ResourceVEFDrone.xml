  <ThingDef ParentName="ResourceBase">
    <defName>Miho_MechItemLight</defName>
    <label>경장갑 견마 드론 (전원 넣는 중)</label>
    <description>완제품 견마 드론 입니다.</description>
    <graphicData>
      <texPath>Things/Items/MihoMechUndeployed/Sapsal</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	    <drawSize>3.2</drawSize>
    </graphicData>
    <tickerType>Normal</tickerType>

    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>1</stackLimit>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <MarketValue>2500</MarketValue>
      <Mass>100</Mass>
      <Flammability>0</Flammability>
      <DeteriorationRate>2</DeteriorationRate>
    </statBases>
    <intricate>true</intricate>
		<comps>
			<li Class="OHFP.CompProperties_OHFP_Hatcher">
				<hatcherDaystoHatch>0.25</hatcherDaystoHatch>
				<hatcherPawnList>
					<li>Alien_Miho_Mech_Sapsal_Player</li>
				</hatcherPawnList>

				<randomAdoption>
					<li>
						<factionType>player</factionType>
						<weight>100</weight>
					</li>
				</randomAdoption>

				<newBornChance>1</newBornChance>
				<!-- <debug>true</debug> -->
			</li>
      <li Class="CompProperties_TemperatureRuinable">
        <minSafeTemperature>-255</minSafeTemperature>
        <maxSafeTemperature>255</maxSafeTemperature>
        <progressPerDegreePerTick>0.00003</progressPerDegreePerTick>
      </li>
		</comps>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
  </ThingDef>
  
